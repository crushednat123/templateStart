<Window x:Class="Library.Pages.InformationPages.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Выход" Height="350" Width="400"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Grid>
        <Border CornerRadius="10 10 10 10" BorderThickness="3" BorderBrush="Blue">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="{StaticResource DarkBlueTopColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource DarkBlueBottomColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Text="Выход" Foreground="White" Margin="10 10 0 0" FontSize="16"/>
        
        <TextBlock Text="Вы уверены что хотите выйти ?" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="White" FontSize="20"></TextBlock>
                                             
            <Button Content="Да" HorizontalAlignment="Left"/>
            <Button Content="Нет" HorizontalAlignment="Right"/>

    </Grid>
</Window>
